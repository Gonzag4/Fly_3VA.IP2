<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.ComprarPassagemController"
            prefHeight="300.0" prefWidth="400.0">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
        <Label text="Comprar Passagem"/>
        <Label text="Voo:"/>
        <ComboBox fx:id="cbVoos" prefWidth="300"/>
        <Label text="Assento:"/>
        <ComboBox fx:id="cbAssentos" prefWidth="300"/>
        <Button text="Comprar" onAction="#onComprar"/>
        <Button text="Fechar" onAction="#onFechar"/>
        <Label fx:id="lblMensagem" style="-fx-text-fill: red;"/>
    </VBox>
</AnchorPane>