<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.AtualizarEmpresaController"
            prefHeight="350.0" prefWidth="400.0">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="350">
        <Label text="Atualizar Dados da Empresa" styleClass="titulo"/>
        <TextField fx:id="txtNome" promptText="Nome"/>
        <TextField fx:id="txtCnpj" promptText="CNPJ"/>
        <TextField fx:id="txtLogin" promptText="Login"/>
        <PasswordField fx:id="txtSenha" promptText="Senha"/>
        <Label fx:id="lblMensagem" textFill="red"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Salvar" onAction="#onSalvar"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
        </HBox>
    </VBox>
</AnchorPane>