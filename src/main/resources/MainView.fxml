<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.MainViewController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20" prefWidth="600" prefHeight="400">
        <Label text="✈ PASSAGENS AÉREAS ✈" styleClass="titulo"/>
        <Button fx:id="btnLoginPassageiro" text="Login Passageiro" styleClass="menu" onAction="#onLoginPassageiro"/>
        <Button fx:id="btnCadastroPassageiro" text="Cadastrar Passageiro" styleClass="menu" onAction="#onCadastroPassageiro"/>
        <Button fx:id="btnLoginEmpresa" text="Login Empresa Aérea" styleClass="menu" onAction="#onLoginEmpresa"/>
        <Button fx:id="btnCadastroEmpresa" text="Cadastrar Empresa Aérea" styleClass="menu" onAction="#onCadastroEmpresa"/>
        <Button fx:id="btnSair" text="Sair" styleClass="menu" onAction="#onSair"/>
    </VBox>
</AnchorPane>