<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.CadastrarAeronaveController"
            prefHeight="300.0" prefWidth="400.0">
    <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
        <Label text="Cadastrar Aeronave" styleClass="titulo"/>
        <TextField fx:id="txtModelo" promptText="Modelo"/>
        <TextField fx:id="txtFileiras" promptText="Quantidade de Fileiras"/>
        <TextField fx:id="txtAssentosPorFileira" promptText="Assentos por Fileira"/>
        <Label fx:id="lblMensagem" textFill="red"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Cadastrar" onAction="#onCadastrar"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
        </HBox>
    </VBox>
</AnchorPane>